<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../background.jpg');">
  <div class="border-form-div">
    <h2>Login</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= f.email_field :email, :autofocus => true, :placeholder => 'example@example.com' %>

      <%= f.password_field :password, :placeholder => 'Password' %>
      <% if devise_mapping.rememberable? -%>
        <br /><%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "control-label" %><br />
      <% end -%>
    <%= f.submit "Sign in", class: 'btn btn-primary' %>
  <% end %>
  <%= render "devise/shared/links" %>
  </div>
</div>




