<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('../background.jpg');">
  <div class="border-form-div">
  <div class="form-body">
    <h2 align="center">Login</h2>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

      <%= f.email_field :email, :autofocus => true, :placeholder => 'example@example.com', class: "filling-form-black" %>

      <%= f.password_field :password, :placeholder => 'Password', class: "filling-form-black" %>
      <% if devise_mapping.rememberable? -%>
        <br /><%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "control-label" %><br />
      <% end -%>
       <%= render "devise/shared/links" %>
    <%= f.submit "Sign in", class: 'btn btn-primary' %>


  <% end %>
  </div>

  </div>

</div>




